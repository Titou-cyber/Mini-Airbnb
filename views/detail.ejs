<%- include('partials/header') %>

<div class="container">
  <div class="logement-detail">
    <div class="logement-detail-image">
      <img src="/images/<%= logement.image %>" alt="<%= logement.titre %>">
    </div>
    
    <div class="logement-detail-info">
      <div class="logement-detail-header">
        <div class="logement-detail-title">
          <h2><%= logement.titre %></h2>
        </div>
        <div class="logement-detail-prix">
          <%= logement.prix %>€<span> / nuit</span>
        </div>
      </div>
      
      <div class="logement-detail-caracteristiques">
        <div class="feature-item">
          <div class="feature-icon">
            <i class="fas fa-bed"></i>
          </div>
          <div class="feature-text">
            <%= logement.chambres %> chambre<%= logement.chambres > 1 ? 's' : '' %>
          </div>
        </div>
        
        <div class="feature-item">
          <div class="feature-icon">
            <i class="fas fa-bath"></i>
          </div>
          <div class="feature-text">
            <%= logement.salleDeBains %> salle<%= logement.salleDeBains > 1 ? 's' : '' %> de bain
          </div>
        </div>
        
        <div class="feature-item">
          <div class="feature-icon">
            <i class="fas fa-users"></i>
          </div>
          <div class="feature-text">
            <%= logement.capacite %> personne<%= logement.capacite > 1 ? 's' : '' %>
          </div>
        </div>
      </div>
      
      <div class="logement-detail-section logement-detail-description">
        <h3><i class="fas fa-info-circle"></i> Description</h3>
        <p><%= logement.description %></p>
      </div>
      
      <div class="logement-detail-section logement-detail-equipements">
        <h3><i class="fas fa-concierge-bell"></i> Équipements</h3>
        <ul>
          <% logement.equipements.forEach(equipement => { %>
            <li>
              <% if (equipement === 'WiFi') { %>
                <i class="fas fa-wifi equipement-icon"></i>
              <% } else if (equipement === 'Cuisine équipée' || equipement === 'Kitchenette') { %>
                <i class="fas fa-utensils equipement-icon"></i>
              <% } else if (equipement === 'Machine à laver') { %>
                <i class="fas fa-tshirt equipement-icon"></i>
              <% } else if (equipement === 'TV') { %>
                <i class="fas fa-tv equipement-icon"></i>
              <% } else if (equipement === 'Piscine') { %>
                <i class="fas fa-swimming-pool equipement-icon"></i>
              <% } else if (equipement === 'Parking') { %>
                <i class="fas fa-parking equipement-icon"></i>
              <% } else if (equipement === 'Barbecue') { %>
                <i class="fas fa-fire equipement-icon"></i>
              <% } else if (equipement === 'Climatisation') { %>
                <i class="fas fa-snowflake equipement-icon"></i>
              <% } else if (equipement === 'Cheminée') { %>
                <i class="fas fa-fire-alt equipement-icon"></i>
              <% } else if (equipement === 'Terrasse') { %>
                <i class="fas fa-umbrella-beach equipement-icon"></i>
              <% } else { %>
                <i class="fas fa-check-circle equipement-icon"></i>
              <% } %>
              <%= equipement %>
            </li>
          <% }); %>
        </ul>
      </div>
      
      <a href="/" class="btn-retour">
        <i class="fas fa-arrow-left"></i> Retour à la liste des logements
      </a>
    </div>
  </div>
</div>

<%- include('partials/footer') %>