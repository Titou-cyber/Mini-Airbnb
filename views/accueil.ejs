<%- include('partials/header') %>

<section class="hero">
  <div class="container">
    <h2>Découvrez des lieux uniques pour séjourner</h2>
    <p>Trouvez des logements entiers et des chambres privées parfaits pour tous les voyages.</p>
  </div>
</section>

<div class="container">
  <h2 class="section-title">Nos hébergements recommandés</h2>
  
  <div class="logements-grid">
    <% logements.forEach(logement => { %>
      <div class="logement-card">
        <a href="/logement/<%= logement.id %>">
          <div class="logement-image">
            <img src="/images/<%= logement.image %>" alt="<%= logement.titre %>">
          </div>
          <div class="logement-info">
            <h3><%= logement.titre %></h3>
            <p class="logement-short-desc"><%= logement.description.substring(0, 80) %>...</p>
            <div class="logement-meta">
              <span class="logement-capacity">
                <i class="fas fa-user"></i> <%= logement.capacite %> personne<%= logement.capacite > 1 ? 's' : '' %>
              </span>
              <span class="logement-prix"><%= logement.prix %>€<span> / nuit</span></span>
            </div>
          </div>
        </a>
      </div>
    <% }); %>
  </div>
</div>

<%- include('partials/footer') %>